<%= link_to "Back to the #{@image.gallery.name} gallery", @image.gallery %>
<%= content_tag :h2, @image.name %>
<%= content_tag :h3, @image.description %>
<p>
  <% if @image.user == current_user %>
    <%= link_to "Edit image", edit_image_path(@image) %>
    <%= link_to "Delete image", @image, method: :delete, 
        confirm: "Are you sure you want to delete this image?"
    %>
  <% end %>
</p>
<%= image_tag(@image.url, width: "500") %>
