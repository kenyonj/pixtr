<div id="<%= dom_id(comment) %>_body" class="comment">
  <div class="author">
    <%= comment.user.email %>  <%= time_ago_in_words(comment.created_at) %> ago
  </div>
  <div class="option">
    <% if current_user == comment.user %>
      <%= link_to "Remove comment", comment, method: :delete, remote: true %>
    <% else %>
      <%= render 'like', subject: comment %>
    <% end %>
  </div>
  <div class="body">
    <%= comment.body %>
  </div>
</div>
