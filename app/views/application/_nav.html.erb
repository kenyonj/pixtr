<header class="navigation">
  <div class="menu-wrapper">
    <a href="/" class="logo">
      <%= image_tag "pixtr-logo2.png" %>
    </a>
    <p class="menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        <li><%= link_to "My Galleries", galleries_path %></li>
        <li><%= link_to "Groups", groups_path %></li>
        <li><%= link_to "Users", users_path %></li>
        <li class="navigation-search-bar">
          <div class="search-bar">
            <div class="search-and-submit">
              <%= form_for :search, url: :search do |form| %>
                <%= form.text_field :query, placeholder: "Enter Search" %>
                <button type="submit">
                  <img src="https://raw.githubusercontent.com/Magnus-G/Random/master/search-icon.png" alt="">
                </button>
              <% end %>
            </div>
          </div>
        </li>
        <% if signed_in? %>
          <li class="sign-up"><%= link_to "Sign Out", sign_out_path, method: :delete %></li>
        <% else %>
          <li class="sign-in"><%= link_to "Sign In", sign_in_path %></li>
          <li class="sign-up"><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

<script>
  $(function() {
    var menu = $('#navigation-menu');
    var menuToggle = $('#js-mobile-menu');

    $(menuToggle).on('click', function(e) {
      e.preventDefault();
      menu.slideToggle(function(){
        if(menu.is(':hidden')) {
          menu.removeAttr('style');
        }
      });
    });
  });
</script>
